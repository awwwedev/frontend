.text
    &-center
        text-align center

    &-left
        text-align left

    &-right
        text-align right

.text-main-color
    color mainColor

.fw-600
    font-weight 600

.link
    color mainColor

    &:hover
        text-decoration underline
        color mainColor

.cursor-pointer
    cursor pointer

.input_null
    background none
    border none
    padding 0

    &:focus
        outline none


.cross
    display block
    position relative
    height 50px
    width 50px
    cursor pointer

    &:before, &:after
        top 50%
        left 10%
        content ''
        background-color black
        position absolute
        display block
        width 90%
        height 2px
        transform rotate(45deg)

    &:after
        transform rotate(-45deg)

    &_sm
        height 25px
        width 25px
